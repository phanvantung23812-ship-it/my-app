generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Todo {
  id        Int      @id @default(autoincrement())
  content   String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}
